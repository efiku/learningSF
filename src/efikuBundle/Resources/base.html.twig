    <a class="navbar-brand" href="#">Symfony Learning</a>
    <ul class="nav navbar-nav">
        <li class="nav-item active">
            <a class="nav-link" href="{{ path("homepage") }}">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">About</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Contact</a>
        </li>
    </ul>
</nav>
<div class="container">
    {% block body %}{% endblock %}
    <footer class="footer">
        <p>&copy; efiku 2015</p>
    </footer>
</div>

{% block javascripts %}
